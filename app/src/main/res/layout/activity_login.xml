<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.001"
        app:srcCompat="@drawable/logo_login" />

    <EditText
        android:id="@+id/editTextTextEmailAddress"
        android:layout_width="124.65pt"
        android:layout_height="22.50pt"
        android:layout_marginTop="28dp"
        android:background="@drawable/rounder_border_edittext"
        android:ems="10"
        android:fontFamily="@font/avenir_light"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:paddingLeft="13.50pt"
        android:paddingTop="5.85pt"
        android:paddingBottom="13dp"
        android:textAlignment="inherit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="124.65pt"
        android:layout_height="22.50pt"
        android:layout_marginTop="39dp"
        android:background="@drawable/rounder_border_edittext_nomal"
        android:ems="10"
        android:fontFamily="@font/avenir_light"
        android:hint="Password"
        android:inputType="textEmailAddress"
        android:paddingLeft="13.50pt"
        android:paddingTop="5.85pt"
        android:paddingBottom="13dp"
        android:textAlignment="inherit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextEmailAddress"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:fontFamily="@font/avenir_black"
        android:text="Forgot Password?"
        android:textColor="@color/black"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextPassword"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/button"
        android:layout_width="217dp"
        android:layout_height="39dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/round_btn_main"
        android:backgroundTint="@color/primary"
        android:fontFamily="@font/avenir_black"
        android:text="Eat  Away!"
        android:textAlignment="center"
        android:textAllCaps="false"

        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="166dp"
        android:layout_height="12dp"
        android:layout_marginTop="59dp"
        android:fontFamily="@font/avenir_roman"
        android:text="Sign in with"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button" />
</androidx.constraintlayout.widget.ConstraintLayout>